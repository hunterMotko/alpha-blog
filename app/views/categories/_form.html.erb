<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, 'Category Name', class: "col-3 col-form-label secondary-text" %>
          <div class="col-9">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-green btn-lg secondary-text" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mb-5">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-white" %>
    </div>
  </div>
</div>