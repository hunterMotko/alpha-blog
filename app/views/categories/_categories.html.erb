 <% @categories.each do |category| %>
  <div class="row justify-content-center">
    <div class="col-xs-12 col-sm-10 col-md-8">
      <div class="card text-center m-4 shadow rounded">
        <div class="card-body">
          <h5 class="card-title"><%= link_to category.name, category_path(category) %></h5>
        </div>
        <div class="card-footer bg-black secondary-text">
          <i><%= time_ago_in_words(category.created_at) %> ago</i>
        </div>
      </div>
    </div>
  </div>
<% end %>