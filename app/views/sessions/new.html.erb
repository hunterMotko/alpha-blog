<div class="container m-5">
  <div class="row justify-content-center bg-black rounded  m-5">
    <div class="col">
      <h1 class="display-3 text-center secondary-text">Log In</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-10">
            
            <%= form_with(scope: :sessions, url: login_path, class: "shadow p-4 mb-3 bg-black rounded", local: true) do |f| %>
              <div class="form-group row m-2">
                <%= f.label :email, class: "col-2 col-form-label secondary-text" %>
                <div class="col-10"> 
                  <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
                </div>
              </div>

              <div class="form-group row m-2">
                <%= f.label :password, class: "col-2 col-form-label secondary-text" %>
                <div class="col-10"> 
                  <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Enter your password" %>
                </div>
              </div>

              <div class="form-group row justify-content-center">
                <%= f.submit 'Login', class: "btn btn-outline-green secondary-text" %>
              </div>
            <% end %>
          </div>
          <div class="text-center mb-5">
            <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-white" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
