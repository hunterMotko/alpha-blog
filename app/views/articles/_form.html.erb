<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-black rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :category, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10"> 
            <%# <%= f.collection_select(:category_ids, Category.all, :id, :name,
            { prompt: "Make your selection from the list below (can be empty)"}, { multiple: true, size: 3, class: "custom-select shadow rounded" }) %> 
          </div>
        </div>

        <div class="form-group row justify-content-center">
        <%# dont need a comma on the submit button %>
          <%= f.submit class: "btn btn-outline-green btn-lg secondary-text" %>
        </div>
      <% end %>
    </div>
    <div class="text-center mb-5">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-white" %>
    </div>
  </div>
</div>