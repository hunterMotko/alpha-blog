<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-4 mb-3 bg-black rounded", local: true) do |f| %>
        <div class="form-group row m-2">
          <%= f.label :username, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10">
            <%= f.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>

        <div class="form-group row m-2">
          <%= f.label :email, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10"> 
            <%= f.email_field :email, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>

        <div class="form-group row m-2">
          <%= f.label :password, class: "col-2 col-form-label secondary-text" %>
          <div class="col-10"> 
            <%= f.password_field :password, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
        <%# dont need a comma on the submit button %>
          <%= f.submit(@user.new_record? ? 'Sign Up' : 'Update Account', class: "btn btn-outline-green secondary-text") %>
        </div>
      <% end %>
    </div>
    <div class="text-center mb-5">
      <%= link_to '[ Cancel and return to articles listing ]', articles_path, class: "text-white" %>
    </div>
  </div>
</div>