 <div class="container m-5">
  <div class="row justify-content-center bg-black rounded  m-5">
    <div class="col">
      <h1 class="display-3 text-center secondary-text">Alpha Bloggers</h1>
    </div>
  </div>
    <% @users.each do |user| %>
      <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-10 col-md-8">
          <div class="card text-center m-4 shadow rounded">
            <div class="card-header bg-black font-italic secondary-text">
              <%= link_to user.username, user %>
            </div>
            <div class="card-body">
              <h5 class="card-title">
                <%= link_to gravatar_for(user, size: 150), user %>
              </h5>
              <p class="card-text">
                <%= pluralize(user.articles.count, 'article') %>
              </p>
              <%= link_to 'View Profile', user, class: "btn btn-darkgreen text-white" %>
              <%= link_to 'Edit Profile', edit_user_path(user), class: "btn btn-lightgreen" %>
            </div>
            <div class="card-footer bg-black secondary-text">
              Joined <%= time_ago_in_words(user.created_at) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
</div>